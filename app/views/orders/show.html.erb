<h1>Orderdetails</h1>

<div html: { style:'width:800px;' }>
<table class="table" >
  <thead>
    <tr>
      <th scope="col">Person</th>
      <th scope="col">Item</th>
      <th scope="col">Amount</th>
      <th scope="col">Price</th>
      <th scope="col">Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    
    <tbody>
      <%= render @order.orderdetails %>
    </tbody>
</table>
</div>
<br/>
<div>
  <%= link_to (@invited_no).to_s+' friends invited click to view',invited_order_path(@order),  {:style=>'margin:10px;',method: "post" ,:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary '}  %>
  <br>
  <%= link_to (@accepted_no).to_s+' friends joined click to view',joined_order_path(@order),  {:style=>'margin:10px;',method: "post" ,:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal2-window', class: 'btn btn-primary '}  %>
  <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content"></div>
    </div>
  </div>
  <div id="#modal2-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content"></div>
    </div>
  </div>
  
</div>
<h3>Add order</h3>
<%= render 'orderdetails/form' %>

